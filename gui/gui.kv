#:kivy 2.1.0

#:set fs_small 13
#:set fs_medium 16
#:set fs_big 20

#:set default_active_button_background [0.7, 0.7, 0.7, 1.0]
#:set default_inactive_button_background [0.4, 0.4, 0.4, 1.0]
#:set default_highlighted_button_background [0.9, 0.9, 0.9, 1.0]
#:set default_active_text_color [1.0, 1.0, 1.0, 1.0]
#:set default_inactive_text_color [0.6, 0.6, 0.6, 1.0]

#:set light_green [0.0, 1.0, 0.0, 1.0]
#:set green [0.0, 0.7, 0.0, 1.0]
#:set dark_green [0.0, 0.3, 0.0, 1.0]

#:set light_red [1.0, 0.0, 0.0, 1.0]
#:set red [0.7, 0.0, 0.0, 1.0]
#:set dark_red [0.3, 0.0, 0.0, 1.0]

#:set background_color [0.2, 0.2, 0.2, 1]
#:set primary_color [1, 1, 1, 1]
#:set secondary_color [0.6, 0.6, 0.6, 1]

<CustomButton@Button>
    _active_background_color: default_active_button_background
    _inactive_background_color: default_inactive_button_background
    _highlighted_background_color: default_highlighted_button_background
    _active_text_color: default_active_text_color
    _inactive_text_color: default_inactive_text_color
    background_color: self._active_background_color if self._active else self._inactive_background_color
    color: self._active_text_color if self._active else self._inactive_text_color
    background_down: self.background_normal

<SmallButton@CustomButton>
    font_size: fs_small

<SplitBar>
    size_hint: 1, 0.05
    canvas.after:
        Color:
            rgba: secondary_color
        Rectangle:
            pos: self.x + self.width * 0.05 , self.y + self.height * 0.5
            size: self.width * 0.9, 1

<GuiLayout>:
    canvas.before:
        Color:
            rgba: background_color
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1.0, None
            size: 1, 100
            orientation: 'horizontal'
            padding: '12dp'
            spacing: '12dp'

            BoxLayout:
                spacing: '12dp'
                size_hint: None, 1.0
                size: 120, 1
                orientation: 'vertical'

                CustomButton:
                    id: start_button
                    text: 'Start'
                    size_hint: 1.0, 0.5
                    _active_background_color: [x * 2 for x in green]
                    _inactive_background_color: [x * 2 for x in dark_green]
                    _highlighted_background_color: [x * 2 for x in light_green]

                CustomButton:
                    id: stop_button
                    text: 'Stop'
                    size_hint: 1.0, 0.5
                    _active_background_color: [x * 2 for x in red]
                    _inactive_background_color: [x * 2 for x in dark_red]
                    _highlighted_background_color: [x * 2 for x in light_red]

            BoxLayout:
                spacing: '3dp'
                size_hint: None, 1.0
                size: 120, 1
                orientation: 'vertical'
                Label:
                    text: 'Range:'
                    font_size: fs_medium
                SmallButton:
                    text: '\u00B1 25 mT'
                SmallButton:
                    text: '\u00B1 50 mT'
                SmallButton:
                    text: '\u00B1 100 mT'

        BoxLayout:
            canvas.before:
                Color:
                    rgba: background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

